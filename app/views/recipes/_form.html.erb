<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%2.times do %>

    <%= f.fields_for :ingredients do |ingr| %>

      First Ingredient
      <%= ingr.label :name %>
      <%= ingr.text_field :name %>
      <%= ingr.label :quantity %>
      <%= ingr.text_field :quantity %>

    <% end %>
  <% end %>

  Commit: <%= f.submit %>

<% end %>
